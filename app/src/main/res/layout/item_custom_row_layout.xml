<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="4dp"
	android:paddingTop="4dp"
	>

	<TextView
		android:id="@+id/item_label"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="title"
		android:textColor="@android:color/black"
		/>

	<TextView
		android:id="@+id/item_label2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/item_label"
		android:text="details"
		android:textColor="@android:color/darker_gray"/>

	<LinearLayout
		android:id="@+id/quantityLayout"
		android:layout_width="100dp"
		android:layout_height="40dp"
		android:layout_alignParentEnd="true"
		android:layout_alignParentTop="true"
		android:background="@drawable/border"
		android:focusable="true"
		android:focusableInTouchMode="true"
		android:gravity="right|center"
		android:orientation="horizontal"
		android:visibility="gone"
		android:weightSum="3">

		<TextView
			android:id="@+id/itemQuantityMinus"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@color/colorButton"
			android:text="-"
			android:textAlignment="center"
			android:textColor="@color/colorButtonText"
			android:textSize="28sp"/>

		<TextView
			android:id="@+id/itemQuantityValue"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@color/colorButtonText"
			android:text="1"
			android:textAlignment="center"
			android:textColor="@color/colorButton"
			android:textSize="20sp"/>


		<TextView
			android:id="@+id/itemQuantityPlus"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:background="@color/colorButton"
			android:text="+"
			android:textAlignment="center"
			android:textColor="@color/colorButtonText"
			android:textSize="28sp"></TextView>


	</LinearLayout>

	<LinearLayout
		android:id="@+id/addButtonLayout"
		android:layout_width="100dp"
		android:layout_height="40dp"
		android:layout_alignParentEnd="true"
		android:layout_alignParentTop="true"
		android:background="@drawable/border"
		android:focusable="true"
		android:focusableInTouchMode="true"
		android:gravity="right|center"
		android:orientation="horizontal"
		android:padding="4dp"
		android:visibility="visible"
		android:weightSum="3">

		<Button
			android:id="@+id/itemQuantityAdd"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="3"
			android:background="@color/colorButtonText"
			android:text="Add"
			android:textAlignment="center"
			android:textAllCaps="false"
			android:textColor="@color/colorButton"
			android:textSize="18sp"/>
	</LinearLayout>
</RelativeLayout>

